//=require bootstrap.min
hypblue = #2A7CB8    //#348AF8
backgroundblue = #73AED8
brand-success = #5cb85c

h1
  font-size 2em

header
  margin 0 auto
  .row
    margin 0 auto
  img
    margin-top 0.4em
    height 4.2em
  h1
    font-family 'Comfortaa', serif
    color hypblue
    margin-bottom 0

  .phone
    text-align right
    font-size 22px
    font-weight 500
    min-width 270px
    margin-top 27px
    font-family 'Merriweather', serif

main.row
  margin-top 0
  padding-top 0


.main-content
  h2
    font-size 24px
  section
    margin-top 40px
    &:first-of-type
      margin-top 0

.side-panel
  //background #f8f8f8
  //h1
  //font-size 1.7em
  .panel-body
    h1
      margin-top: 0.1em

.training-3d form input.form-control
  width: 100%
  margin-left -15px

nav
  width 100%
  ul li > a
    padding 14px 15px
  ul:nth-of-type(2)
    &.navbar-nav.navbar-right
      margin-right 0

  font-family 'Merriweather'
  font-size 18px
  color rgb(27, 48, 159)

.navbar-nav li.start-here > a
  border-radius 5px
  margin-top 3px
  margin-right 2px
  padding 12px 8px
  color white
  background brand-success
  &:hover
    color white
    background darken(brand-success, 10%)

.location
  .location-img
    font-size small
    img
      margin-top 10px
      width 100%
      height auto
  .location-text
    h1
      margin-top 0

.scoop
  img
    width: 85px
    height: auto
    margin: 0.5em

.bootcamp
  text-align center
  img
    width 200px
    height auto
  h3.raising-bar
    margin-top 0

.contact-us .alert, .scoop .alert
  display none

.contact
  .text
    h1
      margin-top 0
  .img
    img
      width 65px
      height auto

form.email-form
  margin-top 15px
  input[type='submit']
    margin-left: 0

.robbie-img
  img
    width: 200px
    height: auto
    margin-right 25px
    margin-bottom 8px
  font-size small
  float left

blockquote
  border none
  padding 5px
  margin 0
  p
    &:before
      content: '"'
    &:after
      content: '"*'

p.h-card
  .p-street-address, .p-postal-code, .p-country-name
    display: block
  .p-locality:after
    content: ', '
  .p-country-name
    margin-bottom: 5px
  .fa
    margin-right: 7px
  .p-tel:after
    content: ''
    display: block

p.map a
  display: block

textarea
  height 6em

body > footer
  margin-top 30px
  .disclaimers
    border-top-left-radius 5px
    border-top-right-radius 5px
    background linear-gradient(top, lighten(hypblue, 80%), lighten(hypblue, 60%))
    font-size small
    padding 10px 20px

.bootcamp-title
  margin-top 50px

@media (max-width:767px)
  header
    h1
      font-size 1.4em
  main
    .navbar-brand
      font-size 0.8em
