@import 'overrides'
@import 'nib/index'
@import 'bootstrap/bootstrap'
//= require normalize

hypblue = #348AF8
backgroundblue = #73AED8

body
  @extends .container
  /* background linear-gradient(top, #ccc, #fff) */

h1
  font-size 34px

header
  @extends .row
  h1
    @extends .col-sm-6
    font-family 'Comfortaa', serif
    color hypblue

  .phone
    @extends .col-sm-6
    text-align right
    font-size 22px
    font-weight 500
    min-width 270px
    margin-top 27px
    font-family 'Merriweather', serif

main
  @extends .row

.main-content
  @extends .col-sm-8
  h2
    font-size 24px
  section
    margin-top 40px
    &:first-of-type
      margin-top 0

    .video iframe
      width 350*2px
      height 197*2px



  &.whole
    @extends .col-sm-12

.side-panel
  @extends .col-sm-4
  background #f8f8f8
  h1
    font-size 26px
  section
    margin-top 50px
    margin-bottom 50px
    &:first-of-type
      margin-top 20px
    &:last-of-type
      margin-bottom 20px

    .video iframe
      width 350px
      height 197px


.training-3d form input.form-control
  width: 100%
  margin-left -15px

.tips
  @extends .row
  img
    width 110px
    height auto
  .col-sm-10
    h3
      margin-top 0
      font-size 28px

input[type='submit'], button
  @extends .btn

input[type='submit'], button[type='submit']
  @extends .btn-primary
  //margin-left 5px

button.green
  @extends .btn-success
  font-size 24px
  padding 12px 24px

nav
  width 100%
  @extends .navbar
  @extends .navbar-default
  ul:first-of-type
    @extends .nav
    @extends .navbar-left
    li > a
      padding 14px 15px
  ul:nth-of-type(2)
    @extends .nav
    @extends .navbar-right
    li > a
      padding 14px 15px
    li.start-here > a
      border-radius 5px
      margin-top 2px
      margin-right 2px
      padding 12px 8px
      color white
      background $brand-success
      @extends .btn-success

  font-family 'Merriweather'
  font-size 18px
  color rgb(27, 48, 159)

.scoop
  img
    height auto
  form.form-inline
    input
      width 100%

.location
  @extends .row

  .location-img
    @extends .col-sm-4
    font-size small
    img
      margin-top 10px
      width 100%
      height auto
  .location-text
    @extends .col-sm-8
    h1
      margin-top 0

.contact-us .alert, .scoop .alert
  display none

.contact
  @extends .row
  .text
    @extends .col-sm-9
    h1
      margin-top 0
  .img
    @extends .col-sm-3
    img
      width 65px
      height auto

form.email-form
  margin-top 15px
  input[type='submit']
    margin-left: 0

.robbie-img
  img
    width: 200px
    height: auto
    margin-right 25px
    margin-bottom 8px
  font-size small
  float left

blockquote
  border none
  padding 5px
  margin 0
  p
    &:before
      content: '"'
    &:after
      content: '"*'

p.h-card
  .p-street-address, .p-postal-code, .p-country-name
    display: block
  .p-locality:after
    content: ', '
  .p-country-name
    margin-bottom: 5px
  .fa
    margin-right: 7px
  .p-tel:after
    content: ''
    display: block

p.map
  @extends .text-center
  a
    display: block
    @extends .text-center

input
  @extends .form-control

textarea
  @extends .form-control
  height 6em

body > footer
  @extends .row
  margin-top 30px
  .disclaimers
    border-top-left-radius 5px
    border-top-right-radius 5px
    background linear-gradient(top, lighten(hypblue, 80%), lighten(hypblue, 60%))
    font-size small
    padding 10px 20px
